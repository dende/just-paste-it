{% extends 'base.html.twig' %}

{% block title %}Neue Pastierung erstellen{% endblock %}

{% block body %}
    <h1>Hallo {{ user.username }} </h1>

    <link rel="stylesheet" href="/style.css">
    <h1><a href="{{ url("paste.create") }}">Neue Paste erstellen</a></h1>

    <h2>Liste aller Pastierungen</h2>
    <table>
        <thead>
        <tr>
            <th>URL</th>
            <th>Erstellt am</th>
            <th>TTL</th>
            <th>Anzahl der Anh√§nge</th>
        </tr>
        </thead>
        <tbody>
            {% for paste in user.pastes %}
                <tr>
                    <td><a href="{{ url("paste.show", {"url": paste.url}) }}">{{ paste.url }}</a></td>
                    <td>{{ paste.created|date('d.m.Y H:i') }}</td>
                    <td>{{ paste.then|date('d.m.Y H:i') }}</td>
                    <td>{{ paste.attachments|length }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
